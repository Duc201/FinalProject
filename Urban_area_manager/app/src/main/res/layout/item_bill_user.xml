<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/size_10"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:elevation="@dimen/double_normal"
    app:cardElevation="5dp"
    android:padding="20dp"
    android:layout_margin="10dp"
    android:background="@drawable/card_view_shadow"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_building"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_building"
            android:layout_width="@dimen/size_90"
            android:layout_height="@dimen/size_90"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_bill"/>

        <LinearLayout
            android:id="@+id/llo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10"
            android:orientation="vertical"
            app:layout_constraintLeft_toRightOf="@+id/img_building"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_bill"
                    style="@style/TextBoldBlueDark"
                    android:layout_marginTop="@dimen/size_5"
                    android:text="Hóa đơn 04/2023"
                    android:textSize="@dimen/text_size_16" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.2"
                    android:layout_height="match_parent"
                    android:id="@+id/state_bill"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginRight="5dp"
                    android:text="Chưa thanh toán"
                    android:gravity="center"
                    android:padding="2dp"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/white"
                    android:background="#FF5252"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng Hóa Đơn" />

                <TextView
                    android:id="@+id/tv_sum_bill"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:gravity="right"
                    android:text="150000VND"
                    android:textStyle="bold"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Hạn thanh toán" />

                <TextView
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:gravity="right"
                    android:text="24/12/2009"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                    />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/light_background"
    tools:context=".feature.Admin.Home.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_20">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="40dp"
                    android:layout_marginStart="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/name"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_18"
                        android:text="Chào Đỗ Mạnh Đức"
                        android:layout_marginRight="@dimen/size_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginRight="@dimen/size_10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="normal"
                        android:text="125904999"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/size_40"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            app:cardCornerRadius="@dimen/size_10"
                            android:animateLayoutChanges="true"
                            android:elevation="@dimen/double_normal"
                            app:cardElevation="@dimen/normal"
                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:id="@+id/img_building"
                                android:src="@drawable/ic_apartment" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quản lý tòa nhà"
                            android:layout_marginTop="@dimen/size_20"
                            style="@style/TextBoldBlueDark"
                            android:textSize="@dimen/text_size_15"
                            android:textColor="@color/blue_text"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:id="@+id/img_apartment"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_house" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Quản lý căn hộ"
                            android:textSize="@dimen/text_size_15"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            android:id="@+id/resident"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_resident" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Quản lý cư dân"
                            android:textSize="@dimen/text_size_15"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/size_40"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            android:id="@+id/employee"
                            app:cardElevation="@dimen/normal"
                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_employee" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/employee_manager"
                            android:layout_marginTop="@dimen/size_20"
                            style="@style/TextBoldBlueDark"
                            android:textSize="@dimen/text_size_15"
                            android:textColor="@color/blue_text"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/size_40"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:id="@+id/bill"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_bill" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="@string/bill_manager"
                            android:textSize="@dimen/text_size_15"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:id="@+id/IOT_device"
                                android:src="@drawable/ic_iot"
                                android:padding="10dp" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Quản lý thiết bị IOT"
                            android:layout_marginTop="@dimen/size_20"
                            android:textSize="@dimen/text_size_15"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/size_40"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:id="@+id/notification"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:src="@drawable/ic_notification" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Quản lý thông báo"
                            android:textSize="@dimen/text_size_15"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Đang phát triển"
                            android:layout_marginTop="@dimen/size_20"
                            android:textSize="@dimen/text_size_15"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
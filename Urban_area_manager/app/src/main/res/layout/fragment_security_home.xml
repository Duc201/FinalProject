<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_background"
    tools:context=".feature.mainEmployee.Employee.Security.SecurityHomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_20">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/name"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_18"
                        android:text="Chào Đỗ Mạnh Đức"
                        android:layout_marginRight="@dimen/size_10"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="|"
                        android:layout_marginRight="@dimen/size_10" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_18"
                        android:textStyle="normal"
                        android:text="125904999"/>

                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/size_20"
                    app:cardCornerRadius="10dp">
                    <com.example.urban_area_manager.utils.extensions.NestedScrollableHost
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_250">
                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/images_vp2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </com.example.urban_area_manager.utils.extensions.NestedScrollableHost>
                </androidx.cardview.widget.CardView>



                <me.relex.circleindicator.CircleIndicator3
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    app:ci_drawable="@drawable/bg_indicator"
                    android:id="@+id/circleIndicator3"
                    android:layout_marginBottom="@dimen/size_5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Chức năng quản lý"
                    style="@style/CustomTitleText"
                    android:textSize="@dimen/text_size_16"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/size_20"
                    android:layout_marginLeft="@dimen/size_20"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/size_40"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:id="@+id/bill"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:padding="10dp"
                                android:id="@+id/camera"
                                android:src="@drawable/ic_camera" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Quản lý camera"
                            android:textSize="@dimen/text_size_15"
                            android:layout_marginTop="@dimen/size_20"
                            android:layout_gravity="center"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="@dimen/size_10"
                            android:layout_gravity="center"
                            android:animateLayoutChanges="true"
                            app:cardElevation="@dimen/normal"

                            android:background="@drawable/card_view_shadow">

                            <ImageView
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:id="@+id/img_notification"
                                android:src="@drawable/ic_notification"
                                android:padding="10dp" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TextBoldBlueDark"
                            android:textColor="@color/blue_text"
                            android:text="Quản lý thông báo"
                            android:layout_marginTop="@dimen/size_20"
                            android:textSize="@dimen/text_size_15"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
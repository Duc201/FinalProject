<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_background"
    android:orientation="vertical"
    tools:context=".feature.Admin.Home.Bill.View.Bill.CreatBillFragment">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:title="Tạo hóa đơn"
        app:navigationIcon="@drawable/ic_back_black"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/CustomToolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/CustomTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kỳ hóa đơn"
                    android:textSize="@dimen/size_17"
                    android:textStyle="bold" />/>

                <TextView
                    android:id="@+id/time_bill"
                    style="@style/CustomTextInput"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/background_edt"
                    android:maxLines="1"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="vertical">

                <TextView
                    style="@style/CustomTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:text="Căn hộ"
                    android:textSize="@dimen/size_17"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/shape_border"
                    android:orientation="vertical"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp">

                    <Spinner
                        android:id="@+id/spin_apartment"
                        style="@style/CustomTextInput"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48" />
                </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/semi_gray" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin dịch vụ"
                android:textSize="@dimen/size_17"
                android:textStyle="bold"
                style="@style/CustomTitleText"
                android:layout_marginBottom="10dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcv_list_step_service"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:id="@+id/rcv_details_bill_fixed"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/semi_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/CustomTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="20sp"
                        android:textColor="@color/blue_background"
                        android:textStyle="bold"
                        android:text="Tổng tiền: " />

                    <TextView
                        style="@style/CustomTitleText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#FF5252"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:gravity="right"
                        android:id="@+id/sum_bill" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="@dimen/size_40"
                    android:id="@+id/btn_add"
                    style="@style/ButtonBlue"
                    android:text="Xác nhận"/>
            </LinearLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>

</LinearLayout>
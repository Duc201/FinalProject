<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:pp="http://schemas.android.com/tools"
    pp:cardCornerRadius="@dimen/size_10"
    android:layout_gravity="center"
    android:animateLayoutChanges="true"
    android:elevation="@dimen/double_normal"
    app:cardElevation="5dp"
    android:padding="20dp"
    android:id="@+id/item_apartment"
    android:layout_margin="10dp"
    android:background="@drawable/card_view_shadow">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_building"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_apartment"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_80"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_house"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/llo"
            android:layout_marginLeft="@dimen/size_10"
            app:layout_constraintLeft_toRightOf="@+id/img_apartment"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A213 "
                android:id="@+id/name"
                style="@style/TextBoldBlueDark"
                android:textSize="@dimen/text_size_16"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khu vực tòa A "
                android:id="@+id/status"
                android:textColor="@color/semi_gray"
                android:layout_marginTop="@dimen/size_5"
                android:textSize="@dimen/text_size_16"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
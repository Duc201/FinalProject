<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_collapseMode="pin"
        app:title=" Chi tiết phản ánh số..."
        app:titleMarginTop="@dimen/size_15"
        app:navigationIcon="@drawable/ic_back"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:theme="@style/CustomToolbar"/>

    <com.example.urban_area_manager.utils.view.CustomScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/images_vp2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <me.relex.circleindicator.CircleIndicator3
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:ci_drawable="@drawable/bg_indicator"
                    android:id="@+id/circleIndicator3"
                    android:layout_marginBottom="@dimen/size_5"
                    app:layout_constraintBottom_toBottomOf="@id/images_vp2"
                    app:layout_constraintLeft_toLeftOf="@id/images_vp2"
                    app:layout_constraintRight_toRightOf="@id/images_vp2"  />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_8"
                    android:text="Đã phân công"
                    android:background="@color/aqi_normal"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="@id/images_vp2"
                    app:layout_constraintLeft_toLeftOf="@id/images_vp2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:text="Nội dung phản ánh" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/CustomHintText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_10"
                    android:background="@drawable/custom_edit_text"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                    android:textStyle="italic" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginTop="@dimen/size_20"
                android:background="@color/background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="Lĩnh vực" />

                <TextView
                    android:id="@+id/field"
                    style="@style/CustomHintTextLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="Địa chỉ" />

                <TextView
                    android:id="@+id/tv_specificLocation"
                    style="@style/CustomHintTextLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="Khu vực" />

                <TextView
                    android:id="@+id/tv_loaction"
                    style="@style/CustomHintTextLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="Nhân viên thực hiện" />

                <TextView
                    android:id="@+id/name_employee"
                    style="@style/CustomHintTextLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                   />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="1"
                    android:text="Ngày Phản ánh" />

                <TextView
                    android:id="@+id/timeCreator"
                    style="@style/CustomHintTextLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:maxLines="1"
                    android:paddingHorizontal="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    android:textColorHint="@color/blue_text"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/background_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_25"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10"
                    android:layout_weight="6"
                    android:text="Vị trí" />

                <fragment
                    android:id="@+id/map_assig"
                    class="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginBottom="@dimen/size_30"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/background_color" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/CustomTitleText"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_10"
                android:text="Phần xử lý của nhân viên "/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    style="@style/CustomTitleText"
                    android:text="Kết quả"/>/>
                <EditText
                    android:id="@+id/edt_result"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_48"
                    android:layout_marginTop="@dimen/size_10"
                    android:paddingLeft="26dp"
                    android:paddingRight="26dp"
                    style="@style/CustomTextInput"
                    android:background="@drawable/background_edt" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_10"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    style="@style/CustomTitleText"
                    android:gravity="center"
                    android:text="Hình ảnh khắc phục"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:src="@drawable/ic_user_bottom"
                    android:id="@+id/respondimg1" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/size_10"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    style="@style/CustomTitleText"
                    android:gravity="center"
                    android:text="Hình ảnh khắc phục"/>
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:src="@drawable/ic_user_bottom"
                    android:id="@+id/respondimg2" />
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="40dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_yes"
                    style="@style/ButtonBlue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_button_corner_30_blue"
                    android:text="Gửi" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="8dp"
                    style="@style/ButtonRed"
                    android:text="Từ chối" />
            </LinearLayout>
        </LinearLayout>

    </com.example.urban_area_manager.utils.view.CustomScrollView>
</LinearLayout>
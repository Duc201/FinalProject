<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_background"
    tools:context=".feature.Admin.Reflect.View.AddReflectFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:navigationIcon="@drawable/ic_back"
        app:title="Tạo phản ánh"
        app:titleTextColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp" />


        <com.example.urban_area_manager.utils.view.CustomScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scroll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_8"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        style="@style/CustomTitleText"
                        android:text="Vị trí phản ánh"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_border"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:paddingLeft="26dp"
                        android:paddingRight="26dp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:id="@+id/location_reflect_sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_25"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        style="@style/CustomTitleText"
                        android:text="Vị trí cụ thể"/>
                    <EditText
                        android:id="@+id/edt_SpecificLocation"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_48"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/custom_edit_text"
                        style="@style/CustomTextInput"
                        android:maxLines="1"
                        android:paddingHorizontal="@dimen/size_10"
                        android:paddingLeft="26dp"
                        android:paddingRight="26dp"
                        android:textColorHint="@color/blue_text"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_25"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        style="@style/CustomTitleText"
                        android:text="Lĩnh vực phản ánh"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:background="@drawable/shape_border"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:paddingLeft="26dp"
                        android:paddingRight="26dp">
                        <Spinner
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_48"
                            android:id="@+id/sp_feild"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_25"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        style="@style/CustomTitleText"
                        android:text="Nội dung phản ánh"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10"
                        android:background="@drawable/custom_edit_text"
                        android:paddingHorizontal="@dimen/size_10"
                        android:paddingLeft="26dp"
                        android:paddingRight="26dp"
                        android:id="@+id/edt_content"
                        style="@style/CustomTextInput" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_25"
                    android:orientation="vertical">
                    <TextView
                        style="@style/CustomTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        android:text="Chụp ảnh hiện trường"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="@dimen/size_100"
                            android:layout_height="@dimen/size_100"
                            android:layout_marginTop="@dimen/size_10"
                            android:layout_gravity="center"
                            android:id="@+id/img_1"
                            android:layout_weight="1"
                            android:src="@drawable/icon_addimage"
                            android:scaleType="fitXY"
                            android:paddingLeft="26dp"
                            android:paddingRight="26dp" />
                        <ImageView
                            android:layout_width="@dimen/size_100"
                            android:id="@+id/img_2"
                            android:layout_height="@dimen/size_100"
                            android:layout_marginTop="@dimen/size_10"
                            android:scaleType="fitXY"

                            android:layout_weight="1"

                            android:layout_gravity="center"
                            android:src="@drawable/icon_addimage"
                            android:paddingLeft="26dp"
                            android:paddingRight="26dp" />

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_25"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10"
                        style="@style/CustomTitleText"
                        android:text="Đánh dấu vị trí"/>
                    <fragment
                        android:id="@+id/map"
                        class="com.google.android.gms.maps.SupportMapFragment"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginTop="10dp"
                        />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_send"
                    style="@style/ButtonBlue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_25"
                    android:layout_marginBottom="@dimen/size_80"

                    android:text="Gửi" />



            </LinearLayout>
        </com.example.urban_area_manager.utils.view.CustomScrollView>

</LinearLayout>